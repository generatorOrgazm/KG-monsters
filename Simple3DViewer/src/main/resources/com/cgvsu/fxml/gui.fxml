<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.cgvsu.GuiController">

    <!-- Верхнее меню -->
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Load Model (Ctrl+O)" onAction="#onOpenModelMenuItemClick"/>
            <MenuItem text="Load Texture (Ctrl+T)" onAction="#onLoadTextureMenuItemClick"/>
            <MenuItem text="Export Model" onAction="#onExportModelMenuItemClick"/>
            <MenuItem text="Clear Scene (Delete)" onAction="#onClearSceneMenuItemClick"/>
            <MenuItem text="Toggle Fullscreen (Ctrl+F)" onAction="#onToggleFullscreen"/>
        </Menu>

        <Menu text="View">
            <MenuItem text="Reset Transformations (R)" onAction="#onResetAllTransformations"/>
        </Menu>

        <Menu text="Help">
            <MenuItem text="About" onAction="#onAboutMenuItemClick"/>
        </Menu>
    </MenuBar>

    <!-- Canvas для отрисовки 3D -->
    <Canvas fx:id="canvas" width="1300" height="870" AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="300.0"/>

    <!-- Панель управления справа -->
    <VBox spacing="10" AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="10.0"
          style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1; -fx-min-width: 280;">

        <!-- Заголовок -->
        <Label text="3D Viewer Settings" style="-fx-font-weight: bold; -fx-font-size: 16;">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Label>

        <!-- Разделитель -->

        <!-- Режимы отрисовки -->
        <Label text="Rendering Modes:" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
        <CheckBox fx:id="wireframeCheckBox" text="Wireframe (Press 1)"
                  style="-fx-padding: 2 0 2 0;"/>
        <CheckBox fx:id="textureCheckBox" text="Texture (Press 2)"
                  style="-fx-padding: 2 0 2 0;"/>
        <CheckBox fx:id="lightingCheckBox" text="Lighting (Press 3)"
                  style="-fx-padding: 2 0 2 0;"/>
        <CheckBox fx:id="showCamerasCheckBox" text="Show Cameras"
                  style="-fx-padding: 2 0 2 0;"/>
        <CheckBox fx:id="showNormalsCheckBox" text="Show Normals"
                  style="-fx-padding: 2 0 2 0;"/>

        <!-- Разделитель -->

        <!-- Выбор цвета -->
        <Label text="Model Color:" style="-fx-font-weight: bold; -fx-font-size: 12; -fx-padding: 5 0 5 0;"/>
        <ColorPicker fx:id="colorPicker"/>

        <!-- Разделитель -->

        <!-- Управление камерами -->
        <Label text="Camera Control:" style="-fx-font-weight: bold; -fx-font-size: 12; -fx-padding: 5 0 5 0;"/>

        <HBox spacing="5">
            <ComboBox fx:id="cameraComboBox" prefWidth="150"/>
            <Button fx:id="addCameraButton" text="+" prefWidth="30"/>
            <Button fx:id="removeCameraButton" text="-" prefWidth="30"/>
        </HBox>

        <Button fx:id="resetCameraButton" text="Reset Camera" prefWidth="200"/>

        <!-- Разделитель -->

        <!-- Настройки FOV -->
        <Label text="Field of View:" style="-fx-font-weight: bold; -fx-font-size: 12; -fx-padding: 5 0 5 0;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Slider fx:id="fovSlider" min="30" max="120" value="45" prefWidth="150"
                    showTickLabels="true" showTickMarks="true" majorTickUnit="30" minorTickCount="5"/>
            <Label fx:id="fovLabel" text="FOV: 45°" prefWidth="60"/>
        </HBox>

        <!-- Разделитель -->

        <!-- Кнопки управления -->
        <HBox spacing="10">
            <Button fx:id="optimizeButton" text="Performance" prefWidth="95"/>
            <Button fx:id="reloadModelButton" text="Reload Model" prefWidth="95"/>
        </HBox>

        <!-- Разделитель -->

        <!-- Управление камерой с клавиатуры -->
        <Label text="Camera Movement:" style="-fx-font-weight: bold; -fx-font-size: 12; -fx-padding: 5 0 5 0;"/>
        <VBox spacing="5">
            <HBox spacing="5">
                <Button text="↑ Forward" prefWidth="95"/>
                <Button text="Target ↑ (Q)" prefWidth="95"/>
            </HBox>
            <HBox spacing="5">
                <Button text="← Left" prefWidth="95"/>
                <Button text="→ Right" prefWidth="95"/>
            </HBox>
            <HBox spacing="5">
                <Button text="↓ Backward" prefWidth="95"/>
                <Button text="Target ↓ (E)" prefWidth="95"/>
            </HBox>
            <HBox spacing="5">
                <Button text="↥ Up (W)" prefWidth="95"/>
                <Button text="↧ Down (S)" prefWidth="95"/>
            </HBox>
            <HBox spacing="5">
                <Button text="Target ← (A)" prefWidth="95"/>
                <Button text="Target → (D)" prefWidth="95"/>
            </HBox>
        </VBox>

        <Label text="Controls:" style="-fx-font-weight: bold; -fx-font-size: 12; -fx-padding: 5 0 5 0;"/>
        <VBox spacing="2" style="-fx-padding: 0 0 0 10;">
            <Label text="• Mouse Drag: Rotate Camera" style="-fx-font-size: 10;"/>
            <Label text="• Mouse Wheel: Zoom" style="-fx-font-size: 10;"/>
            <Label text="• Arrow Keys: Move Camera" style="-fx-font-size: 10;"/>
            <Label text="• W/S: Move Up/Down" style="-fx-font-size: 10;"/>
            <Label text="• A/D/Q/E: Move Target" style="-fx-font-size: 10;"/>
            <Label text="• 1/2/3: Toggle Modes" style="-fx-font-size: 10;"/>
            <Label text="• R: Reset Transform" style="-fx-font-size: 10;"/>
            <Label text="• Ctrl+O: Load Model" style="-fx-font-size: 10;"/>
            <Label text="• Ctrl+T: Load Texture" style="-fx-font-size: 10;"/>
        </VBox>

    </VBox>

</AnchorPane>